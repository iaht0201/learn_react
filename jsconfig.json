{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@i18next/*": ["./src/i18next/*"],
      "@pages/*": ["./src/pages/*"],
      "@templates/*": ["./src/templates/*"],
      "@redux/*": ["./src/redux/*"],
      "@routes/*": ["./src/routes/*"],
      "@store/*": ["./src/store/*"],
      "@themes/*": ["./src/themes/*"],
      "@utils/*": ["./src/utils/*"],
      "@layouts/*": ["./src/layouts/*"],
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "**/*.js",
    "**/*.jsx",
    "src/**/*.jsx",
    "src/**/*.js",
  ]
}